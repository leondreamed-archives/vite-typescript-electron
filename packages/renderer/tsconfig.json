{
	"extends": "../../tsconfig.json",
	"compilerOptions": {
		"rootDir": "../..",
		"baseUrl": ".",
		"paths": {
			"~r/*": [
				"./src/*"
			],
			"~p/*": [
				"../preload/src/*"
			]
		},
		"lib": [
			"ESNext",
			"DOM",
			"DOM.Iterable"
		],
		"typeRoots": [
			"node_modules/@types",
			"./typings"
		],
		"types": [
			"node",
			"vue/ref-macros"
		]
	},
	"include": [
		"./src"
	]
}